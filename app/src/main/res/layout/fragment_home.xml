<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Home.HomeFragment">

        <!--ONLY FOR DEBUGGING -->
        <!--data binding-->

        <!--Experimental-->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="query, profileSearch, profile_menu, emptyElement" />

        <!--<include-->
            <!--android:id="@+id/selfProfile"-->
            <!--layout="@layout/activity_profile_display"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

        <Button
            android:id="@+id/generateUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Fake Users (10)"
            android:visibility="gone" />

        <!--Search Button-->
        <ImageButton
            android:id="@+id/initSearch"
            android:elevation="59dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:id="@+id/selfProfileView"/>

        <EditText
            android:id="@+id/query"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:layout_constraintTop_toBottomOf="@id/initSearch" />

        <Button
            android:id="@+id/profileSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/solid_button_black"
            android:clickable="true"
            android:drawableLeft="@drawable/search_icon"
            android:drawablePadding="20dp"
            android:elevation="2dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingStart="50pt"
            android:text="Search"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/query"
            tools:ignore="RtlCompat" />

        <!--ListView-->
        <ListView
            android:id="@+id/profile_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/profileSearch" />

        <TextView
            android:id="@+id/emptyElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No matches found ..."
            android:textColor="@color/gray"
            android:textSize="32sp"
            app:layout_constraintTop_toBottomOf="@id/profile_menu" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@color/darkCyan">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilePhoto"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="42dp"
                            android:elevation="2dp"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="2dp" />

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-30dp"
                    android:outlineAmbientShadowColor="@color/black">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="26dp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                                <TextView
                                    android:id="@+id/profileName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:textSize="42sp"
                                    android:textStyle="bold"
                                    app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />


                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="66dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/number"
                            android:drawablePadding="10dp"
                            android:paddingLeft="30dp"
                            android:text="Reg. No."
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profileRegNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="22sp"
                            app:layout_constraintTop_toBottomOf="@+id/profileName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/book"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/darkCyan"
                            android:paddingLeft="30dp"
                            android:text="Stream"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/profileStream"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="22sp"
                            app:layout_constraintTop_toBottomOf="@+id/profileRegNo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/semester"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/darkCyan"
                            android:includeFontPadding="true"
                            android:paddingLeft="30dp"
                            android:text="Semester"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/profileSemester"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="22sp"
                            app:layout_constraintTop_toBottomOf="@+id/profileStream" />

                </LinearLayout>

                <TextView
                    android:id="@+id/profileDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="22sp" />


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>








