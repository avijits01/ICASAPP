<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.HomeFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="8dp"
    android:layout_marginBottom="8dp">

    <!--ONLY FOR DEBUGGING -->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="55sp"-->
        <!--android:text="Welcome Avijit"/>-->

    <Button
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/generateUsers"
        android:text="Generate Fake Users (10)"/>

    <!--Profile View-->
    <!--<ImageView-->
        <!--android:paddingBottom="8dp"-->
        <!--android:src="@drawable/avi"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="200dp"-->
        <!--android:id="@+id/userProfileImage"-->
        <!--android:background="@drawable/solid_button_white"/>-->

    <include layout="@layout/activity_profile_display"
        android:id="@+id/temp"
        android:layout_height="300dp"
        android:layout_width="match_parent"/>

    <!--Search Button-->
    <ImageButton
        android:visibility="gone"
        android:background="@drawable/solid_button_white"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/initSearch"
        android:layout_gravity="center"
        android:src="@drawable/search"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/temp"
        android:visibility="visible"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/search">

        <EditText
            android:id="@+id/query"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/querySpinner">
        </Spinner>

    </LinearLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@id/search"
        android:visibility="visible"
        android:id="@+id/profileSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:elevation="2dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="20dp"
        android:textAlignment="viewStart"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true"
        android:clickable="true"
        android:paddingStart="50pt"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/solid_button_black"
        tools:ignore="RtlCompat" />

    <!--ListView-->
    <ListView
        app:layout_constraintTop_toBottomOf="@id/profileSearch"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/profile_menu"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/profile_menu"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No matches found ..."
        android:textSize="32sp"
        android:textColor="@color/gray"
        android:id="@+id/emptyElement"
        />

</androidx.constraintlayout.widget.ConstraintLayout>








