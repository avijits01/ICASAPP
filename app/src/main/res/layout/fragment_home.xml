<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Home.HomeFragment"
        android:background="@color/white">

        <!--ONLY FOR DEBUGGING -->
        <!--data binding-->
        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/blurImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:radius="3"
            android:src="@drawable/pivot_back"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.8"/>

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:id="@+id/photoLayout">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profilePhoto"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:elevation="2dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/name"
                    android:layout_gravity="center"
                    android:textColor="#c5aeae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#c5aeae"
                    android:id="@+id/email"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoLayout"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/homeV"
            android:orientation="vertical">

        </LinearLayout>

        <!--Group-->
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="query, profileSearch, profile_menu, emptyElement" />

                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="test"-->
                    <!--android:id="@+id/test_button"/>-->

                <!--Search Toggle-->

                <ImageButton
                    android:id="@+id/initSearch"
                    android:elevation="59dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--Search Field-->
                <AutoCompleteTextView
                    android:id="@+id/query"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:layout_constraintTop_toBottomOf="@id/initSearch" />

                <!--Search Button-->
                <Button
                    android:id="@+id/profileSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/solid_button_black"
                    android:clickable="true"
                    android:drawableLeft="@drawable/search_icon"
                    android:drawablePadding="20dp"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingStart="50pt"
                    android:text="Search"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/query"
                    tools:ignore="RtlCompat" />

                <!--Profile Results-->
                <ListView
                    android:id="@+id/profile_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:scrollbars="vertical"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/profileSearch" />

                <!--Empty Element-->
                <TextView
                    android:id="@+id/emptyElement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="32sp"
                    app:layout_constraintTop_toBottomOf="@id/profile_menu" />



    </androidx.constraintlayout.widget.ConstraintLayout>








