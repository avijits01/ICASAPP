<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Auth.StudentAuth.StudentRegisterCredentialFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        app:lottie_fileName="Student_register.json"
        app:lottie_loop="false"
        app:lottie_autoPlay="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="ENTER YOUR ICAS REGISTRATION NUMBER"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputRegNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Tempstyle"
        android:textColor="@color/white"
        android:background="@drawable/text_black"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:hint="eg. 181627XXX"
        android:inputType="number"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/solid_button_white"
        android:textColor="@color/navy"
        android:text="NEXT"
        android:layout_height="wrap_content" />

</LinearLayout>