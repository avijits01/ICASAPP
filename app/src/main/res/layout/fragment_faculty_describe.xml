<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".Auth.FacultyAuth.FacultyDescribeFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD A PROFILE PICTURE[OPTIONAL]"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileView"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/profile_round"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/uploadButton"
        android:layout_width="200dp"
        android:text="UPLOAD BUTTON"
        android:layout_marginTop="10dp"
        android:background="@drawable/solid_button_white"
        android:textColor="@color/navy"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="AREAS OF INTEREST AND HOBBIES"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputInterest"
        android:layout_width="385dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/text_black"
        android:hint="Eg. Machine Learning, Stock Market Analysis"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/white"
        android:theme="@style/Tempstyle" />


    <TextView
        android:id="@+id/Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select subjects by clicking below. You can select more than one option"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Select_Sub"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/solid_button_white"
        android:textColor="@color/navy"
        android:text="Select Subjects"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/solid_button_white"
        android:textColor="@color/navy"

        android:text="NEXT" />


</LinearLayout>